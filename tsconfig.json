{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["ESNext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"baseUrl": "src",
	},
	"include": ["src/**/*", "index.ts"],
	"exclude": ["node_modules"]
}